@using Radzen
@using Radzen.Blazor

<div class="container mt-4">
    <h3>Radzen Components Test</h3>
    
    <div class="row">
        <div class="col-md-6">
            <h5>Button Test</h5>
            <RadzenButton Text="Click Me" ButtonStyle="ButtonStyle.Primary" 
                         Click="@OnButtonClick" />
            <p>@buttonMessage</p>
        </div>
        
        <div class="col-md-6">
            <h5>Input Test</h5>
            <RadzenTextBox @bind-Value="@inputValue" Placeholder="Enter text here" />
            <p>You typed: @inputValue</p>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-md-6">
            <h5>Dropdown Test</h5>
            <RadzenDropDown @bind-Value="@selectedValue" 
                           Data="@dropdownData" 
                           ValueProperty="Value" 
                           TextProperty="Text" 
                           Placeholder="Select an option" />
            <p>Selected: @selectedValue</p>
        </div>
        
        <div class="col-md-6">
            <h5>Checkbox Test</h5>
            <RadzenCheckBox @bind-Value="@isChecked" Name="testCheckbox" />
            <label for="testCheckbox">Check me</label>
            <p>Checked: @isChecked</p>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-md-12">
            <h5>DataGrid Test</h5>
            <RadzenDataGrid Data="@gridData" TItem="TestItem" AllowPaging="true" PageSize="5">
                <Columns>
                    <RadzenDataGridColumn TItem="TestItem" Property="Id" Title="ID" />
                    <RadzenDataGridColumn TItem="TestItem" Property="Name" Title="Name" />
                    <RadzenDataGridColumn TItem="TestItem" Property="Value" Title="Value" />
                </Columns>
            </RadzenDataGrid>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-md-12">
            <h5>Notification Test</h5>
            <RadzenButton Text="Show Notification" 
                         ButtonStyle="ButtonStyle.Success" 
                         Click="@ShowNotification" />
        </div>
    </div>
</div>

@code {
    private string buttonMessage = "";
    private string inputValue = "";
    private string selectedValue = "";
    private bool isChecked = false;
    
    private List<DropdownItem> dropdownData = new()
    {
        new() { Value = "1", Text = "Option 1" },
        new() { Value = "2", Text = "Option 2" },
        new() { Value = "3", Text = "Option 3" }
    };
    
    private List<TestItem> gridData = new()
    {
        new() { Id = 1, Name = "Item 1", Value = 100 },
        new() { Id = 2, Name = "Item 2", Value = 200 },
        new() { Id = 3, Name = "Item 3", Value = 300 },
        new() { Id = 4, Name = "Item 4", Value = 400 },
        new() { Id = 5, Name = "Item 5", Value = 500 }
    };
    
    private void OnButtonClick()
    {
        buttonMessage = $"Button clicked at {DateTime.Now:HH:mm:ss}";
    }
    
    private void ShowNotification()
    {
        // This will be handled by Radzen's notification service
        // For now, we'll just show an alert
        // In a real app, you'd inject NotificationService
    }
    
    public class DropdownItem
    {
        public string Value { get; set; } = "";
        public string Text { get; set; } = "";
    }
    
    public class TestItem
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public int Value { get; set; }
    }
}
