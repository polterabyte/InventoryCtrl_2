@using Radzen.Blazor
@using Inventory.UI.Utils

<RadzenCard Style="@($"padding: {Padding}; margin: {Margin};")">
    @if (!string.IsNullOrEmpty(Title))
    {
        <RadzenText TextStyle="@RadzenUtils.Header3" Style="margin-bottom: 1rem;">
            @Title
        </RadzenText>
    }
    
    @ChildContent
</RadzenCard>

@code {
    /// <summary>
    /// Заголовок карточки
    /// </summary>
    [Parameter] public string Title { get; set; } = string.Empty;

    /// <summary>
    /// Внутренние отступы
    /// </summary>
    [Parameter] public string Padding { get; set; } = RadzenUtils.StandardGap;

    /// <summary>
    /// Внешние отступы
    /// </summary>
    [Parameter] public string Margin { get; set; } = "0";

    /// <summary>
    /// Содержимое карточки
    /// </summary>
    [Parameter] public RenderFragment ChildContent { get; set; }
}
