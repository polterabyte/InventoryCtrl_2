@using Radzen.Blazor
@using Inventory.UI.Utils

<RadzenButton Text="@Text"
              Icon="@Icon"
              ButtonStyle="@ButtonStyle"
              Variant="@Variant"
              Size="@Size"
              Disabled="@Disabled"
              Visible="@Visible"
              Click="@OnClick"
              Style="@Style"
              Class="@Class"
              Title="@Title" />

@code {
    /// <summary>
    /// Текст кнопки
    /// </summary>
    [Parameter] public string Text { get; set; } = string.Empty;

    /// <summary>
    /// Иконка кнопки
    /// </summary>
    [Parameter] public string Icon { get; set; } = string.Empty;

    /// <summary>
    /// Стиль кнопки
    /// </summary>
    [Parameter] public ButtonStyle ButtonStyle { get; set; } = RadzenUtils.PrimaryButton;

    /// <summary>
    /// Вариант кнопки
    /// </summary>
    [Parameter] public Variant Variant { get; set; } = Variant.Filled;

    /// <summary>
    /// Размер кнопки
    /// </summary>
    [Parameter] public ButtonSize Size { get; set; } = RadzenUtils.StandardSize;

    /// <summary>
    /// Заблокирована ли кнопка
    /// </summary>
    [Parameter] public bool Disabled { get; set; }

    /// <summary>
    /// Видима ли кнопка
    /// </summary>
    [Parameter] public bool Visible { get; set; } = true;

    /// <summary>
    /// Событие клика
    /// </summary>
    [Parameter] public EventCallback OnClick { get; set; }

    /// <summary>
    /// Дополнительные стили
    /// </summary>
    [Parameter] public string Style { get; set; } = string.Empty;

    /// <summary>
    /// Дополнительные CSS классы
    /// </summary>
    [Parameter] public string Class { get; set; } = string.Empty;

    /// <summary>
    /// Подсказка
    /// </summary>
    [Parameter] public string Title { get; set; } = string.Empty;
}
