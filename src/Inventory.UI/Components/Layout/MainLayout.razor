@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@using Inventory.Shared.Models
@using Inventory.UI.Components.Notifications
@using Inventory.UI.Components
@inject NavigationManager Navigation

<div class="page">
    @if (IsAuthPage)
    {
        @* Показываем содержимое страницы без проверки авторизации для страниц входа/регистрации *@
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">@AppTitle</a>
                <div class="d-flex">
                    <a href="/" class="btn btn-outline-light me-2">
                        <i class="bi bi-house"></i> Главная
                    </a>
                    <a href="login" class="btn btn-outline-light me-2">
                        <i class="bi bi-box-arrow-in-right"></i> Вход
                    </a>
                    <a href="register" class="btn btn-outline-light">
                        <i class="bi bi-person-plus"></i> Регистрация
                    </a>
                </div>
            </div>
        </div>
        <article class="content px-4">
            @Body
        </article>
    }
    else
    {
        @* Обычная логика с проверкой авторизации *@
        <AuthorizeView>
            <Authorized>
                @* User greeting bar *@
                <UserGreeting />
                
                <div class="sidebar">
                    <NavigationMenu AppTitle="@AppTitle" MenuItems="@MenuItems" />
                    <main>
                        <div class="top-row px-4">
                            @TopRowContent
                        </div>

                        <article class="content px-4">
                            @Body
                        </article>
                    </main>
                </div>
            </Authorized>
            <NotAuthorized>
                @LoginComponent
            </NotAuthorized>
        </AuthorizeView>
    }
    
    @* Notification container for toast notifications *@
    <NotificationContainer />
</div>

@code {
    [Parameter] public string AppTitle { get; set; } = "Inventory App";
    [Parameter] public List<NavMenuItem> MenuItems { get; set; } = new();
    [Parameter] public RenderFragment? TopRowContent { get; set; }
    [Parameter] public RenderFragment? LoginComponent { get; set; }

    private bool IsAuthPage => Navigation.Uri.Contains("/login") || Navigation.Uri.Contains("/register");
}
