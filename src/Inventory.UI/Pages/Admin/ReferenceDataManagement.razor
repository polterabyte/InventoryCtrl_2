@page "/admin/reference-data"
@using Inventory.Shared.DTOs
@using Inventory.Shared.Interfaces
@using Inventory.Shared.Services
@using Inventory.UI.Components.Admin
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Reference Data Management - Admin</PageTitle>

<RadzenStack Orientation="Orientation.Vertical" Class="rz-p-4" Gap="1.5rem">
    <RadzenStack Orientation="Orientation.Horizontal"
                 Wrap="true"
                 AlignItems="AlignItems.Center"
                 JustifyContent="JustifyContent.SpaceBetween"
                 Gap="0.75rem">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenIcon Icon="build" Style="font-size: 1.75rem;" />
            <RadzenText TextStyle="TextStyle.H4">Reference Data Management</RadzenText>
        </RadzenStack>
        <RadzenBadge Text="Administrator Panel" Style="info" />
    </RadzenStack>

    <RadzenCard Style="width: 100%;">
        <ChildContent>
            <RadzenTabs @bind-SelectedIndex="activeTabIndex">
                <Tabs>
                    <RadzenTabsItem Text="Categories" Icon="category">
                        <CategoryManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Manufacturers" Icon="precision_manufacturing">
                        <ManufacturerManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Units of Measure" Icon="straighten">
                        <UnitOfMeasureManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Product Groups" Icon="inventory_2">
                        <ProductGroupManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Product Models" Icon="view_in_ar">
                        <ProductModelManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Warehouses" Icon="store">
                        <WarehouseManagementWidget />
                    </RadzenTabsItem>
                    <RadzenTabsItem Text="Locations" Icon="place">
                        <LocationManagementWidget />
                    </RadzenTabsItem>
                </Tabs>
            </RadzenTabs>
        </ChildContent>
    </RadzenCard>
</RadzenStack>

@code {
    private int activeTabIndex;
}
