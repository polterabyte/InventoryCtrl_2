@using Inventory.Shared.DTOs
@inject NavigationManager Navigation

<PageTitle>Unit of Measures - Inventory Control</PageTitle>

<RadzenStack Orientation="Orientation.Vertical" Class="rz-p-4" Gap="1.5rem">
    <RadzenStack Orientation="Orientation.Vertical" Gap="0.25rem">
        <RadzenText TextStyle="TextStyle.H3">Units of Measure</RadzenText>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem">
            <RadzenButton Icon="home"
